визнач спіраль(розмір: ціле) -> список:
    таблиця = [[Ніщо] * розмір для _ в діапазон(розмір)]
    половина_розміру, модуль_розміру = ділмод(розмір, 2)
    лічильник = розмір * розмір

    для коло в діапазон(половина_розміру):
        зворотній_індекс = розмір - коло - 1
        діапазон_вперед = діапазон(коло, зворотній_індекс)
        діапазон_назад = діапазон(зворотній_індекс, коло, -1)
        для індекс в діапазон_назад:
            таблиця[коло][індекс] = лічильник
            лічильник -= 1
        для індекс в діапазон_вперед:
            таблиця[індекс][коло] = лічильник
            лічильник -= 1
        для індекс в діапазон_вперед:
            таблиця[зворотній_індекс][індекс] = лічильник
            лічильник -= 1
        для індекс в діапазон_назад:
            таблиця[індекс][зворотній_індекс] = лічильник
            лічильник -= 1

    якщо модуль_розміру:
        таблиця[половина_розміру][половина_розміру] = 1

    поверни таблиця


якщо __назва__ == "__main__":
    друк(*спіраль(3), sep="\n")
    буква = "Т"
    друк(фс"\[{буква}]/")
